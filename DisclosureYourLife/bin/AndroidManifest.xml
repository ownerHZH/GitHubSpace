<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.owner.disclosureyourlife"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/orbz_sun"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.owner.disclosureyourlife.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.owner.disclosureyourlife.ConsumeListActivity"
            android:label="@string/title_activity_consume" >
        </activity>
        <activity
            android:name="com.owner.disclosureyourlife.IncomeListActivity"
            android:label="@string/title_activity_income" >
        </activity>
        <activity
            android:name="com.owner.disclosureyourlife.UploadOwnActivity"
            android:label="@string/title_activity_upload_own" >
        </activity>
        <activity
            android:name="com.owner.disclosureyourlife.EmbarrassListActivity"
            android:label="@string/title_activity_embarrass_list" >
        </activity>
        <activity
            android:name="com.owner.disclosureyourlife.ConsumeDetailActivity"
            android:label="@string/title_activity_consume_detail" >
        </activity>
        <activity
            android:name="com.owner.disclosureyourlife.IncomeDetailActivity"
            android:label="@string/title_activity_income_detail" >
        </activity>
        <activity
            android:name="com.owner.disclosureyourlife.EmbarrassDetailActivity"
            android:label="@string/title_activity_embarrass_detail" 
            android:configChanges="orientation|keyboardHidden">
        </activity>
        
         <activity
            android:name="com.owner.disclosureyourlife.ImageGridActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        
         <activity
            android:name="com.owner.disclosureyourlife.SelectPicAlbumActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity 
            android:name="GalleryPage"
            android:theme="@android:style/Theme.NoTitleBar"/>
    </application>

</manifest>
